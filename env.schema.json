{
    "$schema": "http://json-schema.org/draft-07/schema",

    "properties":{
        "bot_token": {
            "type": "string"
        },

        "api_base_url": {
            "type": "string",
            "default": "http://ergast.com/api/f1/"
        },

        "api_schedule_endpoint": {
            "type": "string",
            "default": "2022.json"
        },

        "stream_url": {
            "type": "string",
            "default": "https://f1tv.formula1.com/"
        },

        "timezone": {
            "type": "string",
            "default": "Europe/London"
        },

        "reminder_hours_before_event": {
            "type": "integer",
            "default": 2
        }
    },

    "required": ["bot_token", "api_base_url", "api_schedule_endpoint", "stream_url", "timezone", "reminder_hours_before_event"]
    
}